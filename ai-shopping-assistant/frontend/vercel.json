{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://ai-shopping-assistant-api.onrender.com/api",
    "VITE_ENABLE_ANALYTICS": "true"
  }
}